<script type="text/javascript">
//function show(){
//	var t1_value= document.getElementById("t1").value;
//	alert(t1_value);
//}
function add(){
	var t1_value= Number(document.getElementById("t1").value);
	var t2_value= Number(document.getElementById("t2").value);
	document.getElementById("t3").value=t1_value+t2_value;
}
function jian(){
	var t1_value= Number(document.getElementById("t1").value);
	var t2_value= Number(document.getElementById("t2").value);
	document.getElementById("t3").value=t1_value-t2_value;
}
function chen(){
	var t1_value= Number(document.getElementById("t1").value);
	var t2_value= Number(document.getElementById("t2").value);
	document.getElementById("t3").value=t1_value*t2_value;
}
function chu(){
	var t1_value= Number(document.getElementById("t1").value);
	var t2_value= Number(document.getElementById("t2").value);
	document.getElementById("t3").value=t1_value/t2_value;
}
</script>