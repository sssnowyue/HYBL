<input type="text" name="" id="t1"></div></br></br>
<input type="text" name="" id="t2"></br></br>
<input type="text" name="" id="t3"></br></br>
<input type="button" name="" value="+" onclick="add()">
<input type="button" name="" value="-" onclick="jian()">
<input type="button" name="" value="x" onclick="chen()">
<input type="button" name="" value="/" onclick="chu()">
</body>
